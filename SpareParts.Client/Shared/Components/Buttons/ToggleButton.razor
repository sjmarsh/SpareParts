<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" 
        id="toggleButton" title="@ButtonTitle" @bind="IsChecked" @onclick="HandleClick"/>
    <label class="form-check-label" for="toggleButton">@ButtonTitle</label>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public string ButtonTitle { get; set; }

    [Parameter]
    public bool IsChecked { get; set; }

    [Parameter]
    public EventCallback<bool> OnCheckedChanged { get; set; }
    
    private void HandleClick(MouseEventArgs args)
    {
        if(OnCheckedChanged.HasDelegate)
        {
            OnCheckedChanged.InvokeAsync(!IsChecked);
        }
    }
}
